# Cấu hình cơ sở dữ liệu
# Sử dụng SQLite cho development (mặc định)
DATABASE_URL=sqlite:///./school_payment.db

# Hoặc sử dụng MySQL cho production
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/school_payment

# Hoặc sử dụng PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/school_payment

# Cấu hình JWT
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cấu hình server
PORT=5000

# Cấu hình email (tùy chọn)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Cấu hình thanh toán (tùy chọn)
# PAYMENT_WEBHOOK_SECRET=webhook-secret-from-payment-provider
# PAYMENT_GATEWAY_URL=https://api.payment-provider.com